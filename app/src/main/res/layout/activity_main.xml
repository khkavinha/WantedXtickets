<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar" />

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:id="@+id/create_layer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tool_bar"
            android:background="@color/colorBlack"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/acct_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/paprika"
                    android:gravity="center"
                    android:text="@string/account_name"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/acct_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:layout_alignRight="@+id/acct_title"/>

                <TextView
                    android:id="@+id/post_it"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toStartOf="@+id/post_button"
                    android:fontFamily="@font/paprika"
                    android:gravity="center"
                    android:text="@string/post_it"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

                <ImageView
                    android:id="@+id/post_button"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:background="@mipmap/ic_launcher"
                    android:layout_margin="5dp"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>

        </LinearLayout>
        </android.support.design.widget.CoordinatorLayout>
